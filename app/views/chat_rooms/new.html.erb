<h1>Add chat room</h1>

<%= form_for @chat_room do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, autofocus: true, class: 'form-control' %>
    <br>
    <%= f.text_area :description, class: "form-control message-area", placeholder: "Anything about this chat_room" %>
  </div>

  <%= f.submit "Add!", class: 'btn btn-primary' %>
<% end %>
