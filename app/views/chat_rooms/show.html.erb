<div class="box">
    <h1>#<%= @chat_room.title %></h1>
    <p><%= @chat_room.description %></p>
<hr>

    <div id="messages" data-chat-room-id="<%= @chat_room.id %>">
      <%= render @chat_room.messages %>
    </div>
</div>
<%= form_for @message, url: '#' do |f| %>
  <div class="row">
    <div class="col-lg-12">
        <div class="input-group">
          <%= f.text_area :body, class: "form-control message-area", placeholder: "Please click the icon at the top right corner and contact me" %>
          <span class="input-group-btn">
            <%= f.submit "+", class: "btn btn-secondary button" %>
          </span>
        </div>
      </div>
  </div>
<% end %>
<div class="content-footer">

</div>
